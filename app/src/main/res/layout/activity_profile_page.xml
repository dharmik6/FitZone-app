<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_page">

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/drawer1"
        android:elevation="15dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@color/white"
            app:civ_border_color="@color/moderate_cyan"
            app:civ_border_width="4dp" />
        <Button
            android:id="@+id/btn_Uimage"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/drawer2"
            android:elevation="10dp"
            android:fontFamily="@font/robotoslab_regular"
            android:text="Image"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:transformPivotX="3dp"
            android:transformPivotY="5dp"
            android:textColor="@color/black"
            android:shadowColor="@color/white"
            tools:ignore="DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/patuaone_regular"
                    android:text="@string/name"
                    android:textColor="@color/dark_grey"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/patuaone_regular"
                    android:text="user name"
                    android:textColor="@color/dark_blue"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/patuaone_regular"
                    android:text="@string/age1"
                    android:textColor="@color/dark_grey"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/patuaone_regular"
                    android:text="Age"
                    android:textColor="@color/dark_blue"
                    android:textSize="25dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/patuaone_regular"
                    android:text="@string/gender1"
                    android:textColor="@color/dark_grey"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/user_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/patuaone_regular"
                    android:text="gender"
                    android:textColor="@color/dark_blue"
                    android:textSize="25dp" />
            </LinearLayout>
<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/patuaone_regular"
                    android:text="@string/height1"
                    android:textColor="@color/dark_grey"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/user_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/patuaone_regular"
                    android:text="height"
                    android:textColor="@color/dark_blue"
                    android:textSize="25dp" />
            </LinearLayout>
<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/patuaone_regular"
                    android:text="Weight"
                    android:textColor="@color/dark_grey"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/user_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/patuaone_regular"
                    android:text="weight"
                    android:textColor="@color/dark_blue"
                    android:textSize="25dp" />
            </LinearLayout>
            <Button
                android:id="@+id/updt_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button1"
                android:elevation="10dp"
                android:fontFamily="@font/robotoslab_regular"
                android:text="Update Profile"
                android:textAllCaps="false"
                android:textSize="26sp"
                android:textStyle="bold"
                android:transformPivotX="3dp"
                android:transformPivotY="5dp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                tools:ignore="DuplicateSpeakableTextCheck" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>