<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro_page"
    android:background="@color/dark_blue">


    <LinearLayout
        android:background="@drawable/drawer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:id="@+id/logo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fit Zone"
            android:textSize="45sp"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:fontFamily="@font/patuaone_regular"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/patuaone_regular"
            android:text="@string/who"
            android:textColor="@color/black"
            android:textSize="33sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoslab_regular"
            android:text="@string/filed"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_admin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:elevation="10dp"
            android:fontFamily="@font/robotoslab_regular"
            android:text="@string/admin"
            android:textAllCaps="false"
            android:textSize="26sp"
            android:textStyle="bold"
            android:transformPivotX="3dp"
            android:transformPivotY="5dp"
            android:textColor="@color/black"
            android:gravity="center"
            tools:ignore="DuplicateSpeakableTextCheck" />
        <Button
            android:id="@+id/btn_trainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:elevation="10dp"
            android:fontFamily="@font/robotoslab_regular"
            android:text="@string/trainer"
            android:textAllCaps="false"
            android:textSize="26sp"
            android:textStyle="bold"
            android:transformPivotX="3dp"
            android:transformPivotY="5dp"
            android:textColor="@color/black"
            android:gravity="center"
            tools:ignore="DuplicateSpeakableTextCheck" />
        <Button
            android:id="@+id/btn_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:elevation="10dp"
            android:fontFamily="@font/robotoslab_regular"
            android:text="@string/user"
            android:textAllCaps="false"
            android:textSize="26sp"
            android:textStyle="bold"
            android:transformPivotX="3dp"
            android:transformPivotY="5dp"
            android:textColor="@color/black"
            android:gravity="center"
            tools:ignore="DuplicateSpeakableTextCheck" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>